 // Print table header
        System.out.println("+------------+----------------------+--------+-----------------+-----------------------------+------------+-----------------+");
        System.out.println("| ID         | Name                 | Gender | Contact Number  | Address                     | Experience | Department      |");
        System.out.println("+------------+----------------------+--------+-----------------+-----------------------------+------------+-----------------+");

        // Print each doctor's information
        for(Doctor doctor : doctors) {
            System.out.printf("| %-10s | %-20s | %-6s | %-15s | %-27s | %-10d | %-15s |%n",
                doctor.getId(),
                doctor.getName(),
                doctor.getGender(),
                doctor.getContactNumber(),
                doctor.getAddress(),
                doctor.getYearOfExp(),
                doctor.getDepartment());
        }

        // Print table footer
        System.out.println("+------------+----------------------+--------+-----------------+-----------------------------+------------+-----------------+");